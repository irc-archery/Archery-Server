<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Archery | ログイン</title>
<link rel="shortcut icon" href="favicon.ico">
<link type="text/css" rel="stylesheet" href="/stylesheets/jquery.mobile-1.4.5.min.css">
<link type="text/css" rel="stylesheet" href="/stylesheets/insertMatch.css">
<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/jquery-1.11.2.min.js"></script>
<script src="/javascripts/jquery.mobile-1.4.5.min.js"></script>
<script src="/javascripts/insertMatch.js"></script>
<script src="/javascripts/loading.js"></script>
</head>

<body>
<!-- ページ領域 -->
<div data-role="page" data-title="Archery | 新規試合作成"> 
  <!-- header -->
  <div data-role="header" data-theme="b">
    <h1>Archery</h1>
  </div>
  <!-- //header --> 
  <!-- main -->
  <div id="main" data-role="main" class="ui-content">
    <div data-role="fieldcontain">
      <label for="textinput">試合名 :</label>
      <input type="text" name="matchName" id="matchName">
    </div>
    <div data-role="fieldcontain">
      <label for="textinput2">主催者名 :</label>
      <input type="text" name="sponsor" id="sponsor">
    </div>
    <div data-role="fieldcontain">
      <label for="selectmenu" class="select">射数 :</label>
      <select name="selectmenu" id="arrows">
        <option value="6">6</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
    </div>
    <div data-role="fieldcontain">
      <label for="insertMatchPerEnd" class="select">セット数 :</label>
      <select name="insertMatchPerEnd" id="insertMatchPerEnd">
        <option value="6">6</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
    </div>
    
    <div data-role="fieldcontain">
      <label for="length" class="select">距離 :</label>
      <select name="length" id="length">
        <option value="90">90m</option>
        <option value="70">70m</option>
        <option value="60">60m</option>
        <option value="50">50m</option>
        <option value="40">40m</option>
        <option value="30">30m</option>
        <option value="70前">70m前</option>
        <option value="70後">70m後</option>
      </select>
    </div>
    <div data-role="fieldcontain">
      <fieldset data-role="controlgroup" data-type="horizontal" id="permission">
        <legend>試合に参加できる人：</legend>
        <input type="radio" name="radio" id="radio_0" value="0" />
        <label for="radio_0">誰でも</label>
        <input type="radio" name="radio" id="radio_1" value="1" />
        <label for="radio_1">所属団体のみ</label>
      </fieldset>
    </div>
    
    <button id="btn" class="ui-btn" onclick="insertMatch()">作成</button>
  </div>
  <!-- //main --> 
  
  <!-- footer -->
  <div id="footer" data-role="footer" data-theme="a" style="text-align:center;text-overflow: ellipsis;">
    <p>Copyright 2015 IRC. All Rights Reserved.</p>
  </div>
  <!-- //footer --> 
</div>
<!-- //ページ領域 -->
</body>
</html>
